<div class="container body-content">
    <div class="row">
        <div class="col-md-12">
            <article>
                <header>
                    <h2>{{title}}</h2>
                </header>

                <p>
                    {{content}}
                </p>

                <small class="author">
                    {{author.fullName}}
                </small>

                <footer>
                    <div class="pull-right">
                        <a class="btn btn-success btn-xs" href="/article/edit/{{id}}">Edit &raquo;</a>
                        <a class="btn btn-danger btn-xs" href="/article/delete/{{id}}">Delete &raquo;</a>
                        <a class="btn btn-default btn-xs" href="/">Back &raquo;</a>
                    </div>
                </footer>
            </article>
            <br/>
            <br/>
            <div class="pull-right">
                {{#each comments}}
                    <h3>{{comment}}</h3>
                    <small class="author">
                        {{#if author}}
                            {{author.fullName}}
                        {{else}}
                            Anonymous
                        {{/if}}

                    </small>
                    <br/>
                {{/each}}
            </div>
        </div>
    </div>
</div>
